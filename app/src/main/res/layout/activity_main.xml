<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/rlay"
        android:background="#272541"
        tools:ignore="ContentDescription">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ellipse"
            android:id="@+id/circlesym"
            android:layout_centerInParent="true"/>

    <TextView
            android:text="@string/HS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Logosym"
            android:textSize="70sp"
            android:textColor="#00FFFF"
            android:layout_marginBottom="78dp" android:layout_alignBottom="@+id/circlesym"
            android:layout_alignTop="@+id/circlesym" android:layout_marginTop="23dp"
            android:layout_alignRight="@+id/circlesym" android:layout_marginRight="47dp"
            android:layout_marginEnd="47dp" android:layout_alignEnd="@+id/circlesym" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" android:layout_alignLeft="@+id/circlesym"
            android:layout_alignStart="@+id/circlesym" app:fontFamily="@font/almendra_bold_italic"/>
    <TextView
            android:text="@string/HomeService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logosubsym"
            android:textColor="#E0FFFF"
            android:layout_marginBottom="63dp" android:layout_alignBottom="@+id/circlesym"
            android:layout_alignRight="@+id/circlesym" android:layout_marginRight="39dp"
            android:layout_marginEnd="39dp" android:layout_alignEnd="@+id/circlesym" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp" android:layout_alignLeft="@+id/circlesym"
            android:layout_alignStart="@+id/circlesym"/>

</RelativeLayout>