<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@drawable/bckcolor"
        tools:ignore="ContentDescription">

    <Button
            android:background="@drawable/signinbck"
            android:id="@+id/signinBtn"
            android:layout_width="328dp"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="51dp" android:layout_marginEnd="51dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="125dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:layout_alignParentLeft="true" android:layout_marginTop="558dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fpassTxt"
    />
    <EditText
            android:layout_width="339dp"
            android:paddingStart="50dp"
            android:autofillHints="@string/username"
            android:hint="@string/username"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameTxt"
            android:layout_centerHorizontal="true" android:layout_marginBottom="339dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="39dp" android:layout_marginEnd="39dp"
            android:layout_alignParentBottom="true" android:layout_marginTop="347dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp" android:layout_alignParentLeft="true"
            android:background="@drawable/unbck" android:paddingLeft="50dp"
            android:paddingRight="50dp"/>
    <EditText
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textColor="#FFFFFF"
            android:autofillHints="@string/password"
            android:hint="@string/password"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:id="@+id/passTxt" android:layout_alignParentBottom="true" android:layout_marginBottom="271dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="40dp" android:layout_marginEnd="40dp" android:layout_marginTop="415dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/usernameTxt"
            android:background="@drawable/passbck"
            android:paddingStart="50dp"/>
    <TextView
            android:text="@string/forgetpass"
            android:textSize="15sp"
            android:layout_width="123dp"
            android:layout_height="wrap_content" android:id="@+id/fpassTxt" android:layout_alignParentBottom="true"
            android:layout_marginBottom="241dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="44dp" android:layout_marginEnd="44dp"
            android:layout_marginTop="471dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="244dp" android:layout_marginStart="244dp" android:layout_alignParentLeft="true"
            android:layout_below="@+id/passTxt"/>
    <ImageView
            android:layout_width="153dp"
            android:layout_height="156dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="502dp" android:layout_marginTop="73dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="126dp" android:layout_marginStart="126dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:background="@drawable/signuptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_alignParentBottom="true"
            android:layout_marginBottom="68dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="177dp" android:layout_marginEnd="177dp"
            android:layout_marginTop="618dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="162dp" android:layout_marginStart="162dp" android:layout_alignParentLeft="true"/>
</RelativeLayout>